<!-- app/views/home/index.html.erb -->
<% unless user_signed_in? %>
  <!-- Landing page with your background image -->
  <div class="relative min-h-screen bg-cover bg-center bg-no-repeat" 
     style="background-image: linear-gradient(rgba(0,0,0,0.4), rgba(0,0,0,0.4)), url('<%= asset_path('corppy_background.jpg') %>');">
     
    <!-- Navigation -->
    <nav class="relative z-10">
      <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
        <div class="flex justify-between items-center h-16">
          <!-- Logo -->
          <div class="flex items-center">
            <h1 class="text-2xl font-bold text-white">CORPPY.COM</h1>
          </div>
          
          <!-- Navigation Links -->
          <div class="hidden md:flex items-center space-x-8">
            <a href="#" class="text-white hover:text-gray-300 font-medium">Home</a>
            <a href="#" class="text-white hover:text-gray-300 font-medium">About Us</a>
            <%= link_to "Login", login_path, class: "text-white hover:text-gray-300 font-medium" %>
          </div>
        </div>
      </div>
      <!-- Blue line under nav -->
      <div class="h-1 bg-blue-600"></div>
    </nav>

    <!-- Main Content Area -->
    <div class="relative z-10 flex items-center justify-center min-h-screen pt-16">
      <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
        <div class="grid grid-cols-1 lg:grid-cols-2 gap-12 items-center">
          
          <!-- Left Side - Main Heading -->
          <div class="text-left">
            <h1 class="text-6xl md:text-7xl lg:text-8xl font-bold text-white leading-tight">
              Register<br>
              <span class="text-white">your</span><br>
              <span class="text-white">Business</span>
            </h1>
          </div>
          
          <!-- Right Side - CTA Buttons -->
          <div class="flex flex-col items-center lg:items-end space-y-6">
            <%= link_to new_registration_path, 
                class: "inline-flex items-center justify-center px-12 py-4 text-xl font-bold text-white bg-blue-600 hover:bg-blue-700 rounded-full transition-all duration-300 transform hover:scale-105 shadow-xl w-80" do %>
              REGISTER NOW
            <% end %>
            
            <button class="inline-flex items-center justify-center px-12 py-4 text-xl font-bold text-white bg-blue-600 hover:bg-blue-700 rounded-full transition-all duration-300 transform hover:scale-105 shadow-xl w-80">
              NEED HELP
            </button>
          </div>
          
        </div>
      </div>
    </div>

    <!-- Blue geometric accent in bottom right -->
    <div class="absolute bottom-0 right-0 z-5">
      <svg width="300" height="300" viewBox="0 0 300 300" class="text-blue-600">
        <polygon points="150,300 300,150 300,300" fill="currentColor" opacity="0.8"/>
        <polygon points="0,300 150,150 300,300" fill="currentColor" opacity="0.6"/>
        <polygon points="75,225 225,75 300,150 150,300" fill="currentColor" opacity="0.7"/>
      </svg>
    </div>

    <!-- Floating blue circles -->
    <div class="absolute top-20 left-20 w-4 h-4 bg-blue-500 rounded-full opacity-60 z-5"></div>
    <div class="absolute top-1/3 right-1/4 w-6 h-6 bg-blue-400 rounded-full opacity-50 z-5"></div>
    <div class="absolute bottom-1/3 left-1/3 w-3 h-3 bg-blue-600 rounded-full opacity-70 z-5"></div>
  </div>

<% else %>
  <!-- Dashboard for logged-in users -->
  <div class="min-h-screen bg-gray-50">
    <nav class="bg-white border-b border-gray-200">
      <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
        <div class="flex justify-between h-16">
          <div class="flex items-center">
            <%= link_to root_path, class: "flex items-center space-x-2" do %>
              <span class="text-xl font-bold text-indigo-600">Corppy</span>
            <% end %>
          </div>
          
          <div class="flex items-center space-x-4">
            <% if defined?(current_user) && current_user %>
              <span class="text-gray-700">Welcome, <%= current_user.first_name %>!</span>
              <%= link_to "Logout", logout_path, method: :delete, class: "text-gray-500 hover:text-gray-700" %>
            <% end %>
          </div>
        </div>
      </div>
    </nav>

    <div class="max-w-7xl mx-auto py-8 px-4">
      <div class="bg-white rounded-lg shadow p-6 mb-8">
        <h2 class="text-xl font-semibold mb-4">Welcome to Corppy Dashboard</h2>
        <p class="text-gray-600 mb-4">Manage your business registrations</p>
        <%= link_to "Start New Registration", new_registration_path, class: "bg-indigo-600 text-white px-4 py-2 rounded-lg hover:bg-indigo-700" %>
      </div>
    </div>
  </div>
<% end %>