<div class="min-h-screen bg-gray-50 py-8">
  <div class="max-w-md mx-auto">
    <div class="bg-white rounded-lg shadow p-6 text-center">
      <% if @payment.completed? %>
        <div class="text-green-600 mb-4">
          <svg class="w-16 h-16 mx-auto" fill="currentColor" viewBox="0 0 20 20">
            <path fill-rule="evenodd" d="M10 18a8 8 0 100-16 8 8 0 000 16zm3.707-9.293a1 1 0 00-1.414-1.414L9 10.586 7.707 9.293a1 1 0 00-1.414 1.414l2 2a1 1 0 001.414 0l4-4z" clip-rule="evenodd"></path>
          </svg>
        </div>
        <h1 class="text-2xl font-bold text-gray-900 mb-4">Payment Successful!</h1>
        <p class="text-gray-600 mb-6">Your payment of <%= @payment.formatted_amount %> has been processed successfully.</p>
        
      <% elsif @payment.failed? %>
        <div class="text-red-600 mb-4">
          <svg class="w-16 h-16 mx-auto" fill="currentColor" viewBox="0 0 20 20">
            <path fill-rule="evenodd" d="M18 10a8 8 0 11-16 0 8 8 0 0116 0zm-7 4a1 1 0 11-2 0 1 1 0 012 0zm-1-9a1 1 0 00-1 1v4a1 1 0 102 0V6a1 1 0 00-1-1z" clip-rule="evenodd"></path>
          </svg>
        </div>
        <h1 class="text-2xl font-bold text-gray-900 mb-4">Payment Failed</h1>
        <p class="text-gray-600 mb-6">There was an issue processing your payment. Please try again.</p>
        
      <% else %>
        <h1 class="text-2xl font-bold text-gray-900 mb-4">Processing Payment...</h1>
        <p class="text-gray-600 mb-6">Please wait while we process your payment.</p>
      <% end %>
      
      <div class="space-y-3">
        <p><strong>Transaction ID:</strong> <%= @payment.transaction_id %></p>
        <p><strong>Amount:</strong> <%= @payment.formatted_amount %></p>
        <p><strong>Method:</strong> <%= @payment.payment_method.humanize %></p>
      </div>
      
      <div class="mt-6">
        <%= link_to "Back to Dashboard", root_path, class: "bg-indigo-600 text-white px-6 py-2 rounded-md hover:bg-indigo-700" %>
      </div>
    </div>
  </div>
</div>
