<div class="min-h-screen bg-gray-50 py-8">
  <div class="max-w-md mx-auto">
    <div class="bg-white rounded-lg shadow p-6">
      <h1 class="text-2xl font-bold text-gray-900 mb-6">Start Your Business Registration</h1>
      
      <%= form_with model: @registration, local: true, class: "space-y-4" do |form| %>
        <div>
          <%= form.label :business_name, "What's your business name?", class: "block text-sm font-medium text-gray-700 mb-2" %>
          <%= form.text_field :business_name, 
                placeholder: "Enter your business name",
                class: "w-full px-3 py-2 border border-gray-300 rounded-md focus:outline-none focus:ring-2 focus:ring-indigo-500",
                required: true %>
        </div>
        
        <% if @registration.errors.any? %>
          <div class="bg-red-50 border border-red-200 rounded-md p-4">
            <ul class="text-sm text-red-600 space-y-1">
              <% @registration.errors.full_messages.each do |message| %>
                <li><%= message %></li>
              <% end %>
            </ul>
          </div>
        <% end %>
        
        <div class="flex justify-between items-center pt-4">
          <%= link_to "Back", root_path, class: "text-gray-600 hover:text-gray-800" %>
          <%= form.submit "Start Registration", 
                class: "bg-indigo-600 text-white px-6 py-2 rounded-md hover:bg-indigo-700" %>
        </div>
      <% end %>
    </div>
  </div>
</div>