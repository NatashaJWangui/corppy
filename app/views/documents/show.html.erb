<div class="min-h-screen bg-gray-50 py-8">
  <div class="max-w-4xl mx-auto px-4">
    <div class="bg-white rounded-lg shadow p-6">
      <div class="flex justify-between items-center mb-6">
        <h1 class="text-2xl font-bold text-gray-900">Document: <%= @document.document_template.template_name %></h1>
        <div class="flex space-x-3">
          <%= link_to "Download PDF", document_path(@document, format: :pdf), 
                class: "bg-blue-600 text-white px-4 py-2 rounded-md hover:bg-blue-700", 
                target: "_blank" %>
        </div>
      </div>
      
      <div class="bg-gray-50 rounded border p-6 max-h-96 overflow-y-auto">
        <pre class="whitespace-pre-wrap text-sm"><%= @document.generated_content %></pre>
      </div>
      
      <% if @document.current_signature %>
        <div class="mt-6 p-4 bg-green-50 border border-green-200 rounded">
          <p class="text-green-800">
            <strong>Signed by:</strong> <%= @document.current_signature.user.full_name %><br>
            <strong>Date:</strong> <%= @document.current_signature.formatted_signed_at %>
          </p>
        </div>
      <% end %>
    </div>
  </div>
</div>